<p id="notice"><%= notice %></p>
<h1>Manage Appointments</h1>
<%= form_tag appointments_path, :method => 'get' do %>
  <p>
    <a>Insert last name or phrase to find related record: </a>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Provider</th>
      <th>Appointment date</th>
      <th>Time from</th>
      <th>Time to</th>
      <th>Appointment type</th>
      <th>Appointment reason</th>
      <th>Request met</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.last_name %>, <%= appointment.patient.first_name %></td>
        <td><%= appointment.provider.last_name %>, <%= appointment.provider.first_name %></td>
        <td><%= appointment.appointment_date %></td>
        <td><%= appointment.time_from.strftime('%R') %></td>
        <td><%= appointment.time_to.strftime('%R') %></td>
        <td><%= appointment.appointment_type %></td>
        <td><%= appointment.appointment_reason %></td>
        <td><%= appointment.request_met %></td>
        <td><%= appointment.comments %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Appointment', new_appointment_path %>